<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/detail_listitem" 
   
    >

      <TextView  
        android:id="@+id/address_fenlei"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="9pt"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
    />
      
      <ImageButton  
         android:id="@+id/docall_fenlei"
         android:layout_width="wrap_content" 
         android:layout_height="wrap_content"
         android:focusable="false" 
         android:layout_alignParentRight="true" 
         android:layout_marginRight="10dp" 
         android:layout_marginTop="7dp"
         android:layout_marginBottom="7dp"  
         android:onClick="OnFenleiItemBtnClick"
         android:layout_centerVertical="true"
    />
 
  <ImageView
    android:id="@+id/imageview1"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_toRightOf="@id/address_fenlei"
    android:layout_centerVertical="true"
    android:layout_marginLeft="6dp"
    /> 

<TextView  
    android:id="@+id/phonenum_fenlei"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:textSize="9pt"
    android:layout_centerVertical="true"
    android:layout_marginRight="29dp" 
    android:textColor="#7F8186"   
    android:layout_toLeftOf="@id/docall_fenlei"
    /> 

 
     
  
</RelativeLayout>
