<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:descendantFocusability="blocksDescendants" 
    android:background="@drawable/detail_listitem">
    
    
    
    <ImageButton
        android:id="@+id/docall_noaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/call_btn_selector"
        android:onClick="noaddress_click"  
        android:focusable="false" 
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
       
        />
    
    <TextView 
        android:id="@+id/phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/docall_noaddress"
        android:layout_marginRight="30dp"
        android:layout_centerVertical="true"
        android:textSize="9pt"
        />

     <TextView 
        android:id="@+id/staticview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:textSize="8pt"
        android:text="无地址信息"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/phonenumber"
        />

</RelativeLayout>